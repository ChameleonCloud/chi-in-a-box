pipeline {
  agent {
    label "${params.JENKINS_AGENT_LABEL}"
  }

  environment {
    ANSIBLE_DIR = '/etc/ansible'
    DOCKER_REGISTRY = 'docker.chameleoncloud.org'
    DOCKER_REGISTRY_CREDS = credentials('kolla-docker-registry-creds')
  }

  parameters {
    string(name: 'JENKINS_AGENT_LABEL', defaultValue: '',
           description: 'The label of the Jenkins agent to execute the deploy on')
  }

  stages {
    stage('setup') {
      steps {
        sh 'docker login --username=$DOCKER_REGISTRY_CREDS_USR --password=$DOCKER_REGISTRY_CREDS_PSW $DOCKER_REGISTRY'
        sh 'make venv'
      }
    }

    stage('deploy') {
      steps {
        sh "./ansible-playbook playbooks/precis.yml"
      }
    }
    
    stage('restart-service') {
      steps {
        sh "systemctl restart experiment-precis*"
      }	
    }
  }
  
  post {
    always {
      sh 'docker logout $DOCKER_REGISTRY'
    }
  }
}
