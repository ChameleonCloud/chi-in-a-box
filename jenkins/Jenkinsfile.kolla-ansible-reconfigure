pipeline {
  agent {
    label "${params.JENKINS_AGENT_LABEL}"
  }

  environment {
    ANSIBLE_DIR = '/etc/ansible'
  }

  parameters {
    string(name: 'KOLLA_SERVICE_NAME', defaultValue: '',
           description: 'Name of Kolla service to reconfigure (e.g. "horizon")')
    string(name: 'JENKINS_AGENT_LABEL', defaultValue: '',
           description: 'The label of the Jenkins agent to execute the deploy on')
  }

  stages {
    stage('setup') {
      steps {
        sh 'make venv'
      }
    }

    stage('runtime-configs') {
      when {
        not { equals expected: '', actual: params.KOLLA_SERVICE_NAME }
      }
      steps {
        sh "./ansible-playbook playbooks/${params.KOLLA_SERVICE_NAME}.yml"
      }
    }

    stage('reconfigure') {
      when {
        not { equals expected: '', actual: params.KOLLA_SERVICE_NAME }
      }
      steps {
        sh "./kolla-ansible reconfigure --tags=${params.KOLLA_SERVICE_NAME}"
      }
    }
  }

  post {
    success {
      build job: 'kolla-ansible-deploy', parameters: [
        string(name: 'KOLLA_SERVICE_NAME', value: "${params.KOLLA_SERVICE_NAME}"),
        string(name: 'JENKINS_AGENT_LABEL', value: "${params.JENKINS_AGENT_LABEL}")
      ]
    }
  }
}
