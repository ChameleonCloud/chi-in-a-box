#! /bin/sh

slack="{{ hammers_config_path }}/slack.json"
log="/usr/bin/logger"
log_tag="hammers-"$1

docker run --rm \
  --net=host \
  --env-file "{{ hammers_env_file }}" \
  -v "/etc/hammers/slack.json:/etc/hammers/slack.json" \
  -v "/etc/hammers/my.cnf:/root/.my.cnf" \
  {{ hammers_docker_image }} $@ \
  --slack $slack 2>&1 | $log -t $log_tag
